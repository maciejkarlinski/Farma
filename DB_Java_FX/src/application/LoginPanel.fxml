                        <Font size="14.0" />
                     </font></TextField>
                  <Button fx:id="loginButton" layoutX="441.0" layoutY="423.0" mnemonicParsing="false" onAction="#loginButtonClick" prefHeight="35.0" prefWidth="86.0" style="-fx-background-color: GREY;" text="Zaloguj się" textFill="WHITE">
